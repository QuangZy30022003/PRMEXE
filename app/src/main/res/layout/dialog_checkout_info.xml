<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/txtDialogCartTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng: 0 VND"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edtDeliveryAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ nhận hàng"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ghi chú (tuỳ chọn)"
        android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/edtPromotionCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mã giảm giá (nếu có)"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnConfirmCheckout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:textAllCaps="false"
        android:backgroundTint="@color/teal_700"
        android:textColor="@android:color/white"/>

</LinearLayout> 